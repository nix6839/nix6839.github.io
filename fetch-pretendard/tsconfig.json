{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "NodeNext",

    "strict": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,

    "incremental": true,

    "outDir": "./dist"
  }
}
